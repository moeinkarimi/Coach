<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="Fragments.MostanadFragment">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/llMain"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layoutDirection="rtl"
            android:orientation="vertical"
            android:padding="5dp">

            <mytechcorp.ir.coach.TextViewPlus
                android:id="@+id/textViewPlus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="تحویل فایل"
                android:textSize="18sp" />

            <Spinner
                android:id="@+id/spGroupMostanad"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp" />

            <Button
                android:id="@+id/btnGenerate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/btnseletor"
                android:text="دریافت کد"
                android:textSize="18sp" />

            <mytechcorp.ir.coach.TextViewPlus
                android:id="@+id/tvCode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_marginBottom="20dp"
                android:gravity="center"
                android:padding="5dp"
                android:textColor="@color/text"
                android:textSize="22sp" />

            <mytechcorp.ir.coach.TextViewPlus
                android:id="@+id/textViewPlus2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_marginTop="20dp"
                android:text="بررسی و امتیاز دهی به مستندات"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/txtGroup2"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_margin="10dp"
                android:background="@drawable/edittextlayout"
                android:ems="10"
                android:gravity="center"
                android:hint="کد گروه"
                android:inputType="textPersonName"
                android:padding="10dp"
                android:textColor="@color/text" />

            <EditText
                android:id="@+id/txtScore"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_margin="10dp"
                android:background="@drawable/edittextlayout"
                android:ems="10"
                android:gravity="center"
                android:hint="امتیاز"
                android:inputType="textPersonName"
                android:padding="10dp"
                android:textColor="@color/text" />

            <Button
                android:id="@+id/btnGenerate2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/btnseletor"
                android:text="دریافت کد"
                android:textSize="18sp" />

            <mytechcorp.ir.coach.TextViewPlus
                android:id="@+id/tvCode2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:gravity="center"
                android:padding="5dp"
                android:textColor="@color/text"
                android:textSize="22sp" />
        </LinearLayout>

    </ScrollView>

</FrameLayout>
