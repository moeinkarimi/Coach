<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="Fragments.GroupGameFragment">

    <!-- TODO: Update blank fragment layout -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/llMain"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layoutDirection="rtl"
            android:orientation="vertical"
            android:padding="5dp">

            <mytechcorp.ir.coach.TextViewPlus
                android:id="@+id/textViewPlus3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="امتیاز دهی به گروه اول"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/txtGroup"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_margin="10dp"
                android:background="@drawable/edittextlayout"
                android:ems="10"
                android:gravity="center"
                android:hint="کد گروه"
                android:inputType="textPersonName"
                android:padding="10dp"
                android:textColor="@color/text" />

            <Button
                android:id="@+id/btnGenerate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/btnseletor"
                android:text="دریافت کد"
                android:textSize="18sp" />

            <mytechcorp.ir.coach.TextViewPlus
                android:id="@+id/tvCode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:gravity="center"
                android:padding="5dp"
                android:textColor="@color/text"
                android:textSize="22sp" />
        </LinearLayout>
    </ScrollView>
</FrameLayout>
